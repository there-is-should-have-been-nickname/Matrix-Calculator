        <ComboBox x:Name="multiplicationByNumberFormColumns" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260, 30, 0, 0" Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontFamily="Consolas" FontSize="14">
