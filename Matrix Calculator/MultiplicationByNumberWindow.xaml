        <Button x:Name="multiplicationByNumberFormButtonCreate" Content="Создать" Margin="350,30,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Height="30" BorderBrush="#FF2B16B4" FontFamily="Consolas" FontSize="14" Background="#FFC1FFE5" BorderThickness="2" Click="multiplicationByNumberFormButtonCreate_Click"/>
