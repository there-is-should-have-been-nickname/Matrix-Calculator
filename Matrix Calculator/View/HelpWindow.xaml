<Window x:Class="Matrix_Calculator.helpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Matrix_Calculator"
        mc:Ignorable="d"
        Title="Помощь" Height="450" Width="800" ResizeMode="NoResize">
    <Grid x:Name="helpWindowGrid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFD6BFBF" Offset="0.011"/>
                <GradientStop Color="#FFEA5252" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="helpWindowLabel" Content="Label" HorizontalAlignment="Left" Margin="74,27,0,0" VerticalAlignment="Top" Height="268" Width="645" RenderTransformOrigin="0.5,0.5"/>
        <Button x:Name="helpFormButton" Content="Назад" HorizontalAlignment="Left" Margin="74,344,0,0" VerticalAlignment="Top" Width="91" Height="40" BorderBrush="#FF2B16B4" FontFamily="Consolas" FontSize="14" Background="#FFB8B1B1" BorderThickness="2" Click="helpFormButton_Click"/>

    </Grid>
</Window>
